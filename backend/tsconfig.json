{
  "compilerOptions": {
    "target": "ES5",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "include": [
    "index.ts", "routes/*", "../../frontend/src/config/application.json"
  ],
  "exclude": [
    "frontend/**", "node_modules/**"
  ]
}