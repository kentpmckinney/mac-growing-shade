{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"],
    "typeRoots": ["./node_modules/@types"],

  },
  "include": [
    "*"
  ],
  "exclude": [
    "dist", "node_modules", "../frontend/**/*"
  ]
}